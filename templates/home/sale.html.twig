{% extends 'base.html.twig' %}
{% block title %}Vente Immobilière | Agence Lilipucien{% endblock %}

{% block body %}

    <nav aria-label="breadcrumb">
  		<ol class="breadcrumb">
    		<li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Vente</li>
  		</ol>
	</nav>
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			{% for bien in biens %}
				<div class="card m-3" style="width: 18rem;">
  					<img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="Card image cap">
  					<div class="card-body">
    					<h5 class="card-title">{{ bien.titre }}</h5>
    					<p class="card-text text-truncate">{{ bien.description }}</p>
  					</div>
  					<ul class="list-group list-group-flush">
			  			<li class="list-group-item">{{ bien.prix|number_format(0, ',', ' ') }} <span>&#8364;</span></li>
    					<li class="list-group-item">Créé le {{ bien.createdAt|date("d/m/Y à H:i:s") }}</li>
  					</ul>
  					<div class="card-body">
    					<a  href="{{ path('product', {id : bien.id }) }}">
							<i class="bi bi-search"></i>
							Voir le bien
						</a>
					</div>
					<div class="card-body">
    					<a  href="{{ path('delete_product', {id : bien.id }) }}"  onclick="return confirm('Etes-vous sûr de vouloir supprimer ce bien ?')">
							<i class="bi-trash me-1"></i>
							Supprimez le bien
						</a>
  					</div>
				</div>
			{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}